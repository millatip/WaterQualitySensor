<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".MainActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:background="@android:color/background_light">
    <androidx.cardview.widget.CardView
            android:id="@+id/layout_suhu"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_ph"
            android:weightSum="2"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_marginTop="16dp"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/suhu"
                  android:layout_marginLeft="60dp"
                  android:drawableLeft="@drawable/temperature"
                  android:drawableStart="@drawable/temperature"
                  android:textSize="25sp"
                  android:textColor="@color/colorSecondary"
                  android:drawablePadding="8dp"
                  android:layout_marginStart="60dp"
                  android:layout_gravity="center_vertical"
                  android:fontFamily="monospace"/>
        <TextView
                android:id="@+id/suhutv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="31"
                android:textSize="25sp"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:fontFamily="monospace"/>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/layout_ph"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_suhu"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_status"
                android:weightSum="2"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:orientation="horizontal"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_marginTop="16dp"

        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/ph"
                      android:layout_marginLeft="60dp"
                      android:drawableLeft="@drawable/ph_meter"
                      android:drawableStart="@drawable/ph_meter"
                      android:textSize="25sp"
                      android:drawablePadding="8dp"
                      android:textColor="@color/colorSecondary"
                      android:layout_marginStart="60dp"
                      android:layout_gravity="center_vertical"
                      android:fontFamily="monospace"/>
            <TextView
                    android:id="@+id/phtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="7"
                    android:textSize="25sp"
                    android:textColor="@color/colorSecondary"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="end|center_vertical"
                    android:fontFamily="monospace"/>
        </androidx.cardview.widget.CardView>
        <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_ph"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/layout_status"
                android:text="@string/status"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
        />
        <androidx.cardview.widget.CardView
                android:id="@+id/layout_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_status"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/layout_tindakan_suhu"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
        >
            <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/good"
                    android:textSize="25sp"
                    android:textColor="@color/colorSecondary"
                    android:fontFamily="casual"
                    android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:id="@+id/layout_tindakan_suhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_status"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/layout_tindakan_ph"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
        >
            <TextView
                    android:id="@+id/suhu_conclusion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Suhu terlalu tinggi"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>
            <TextView
                    android:id="@+id/suhu_akibat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Akibat : "
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            <TextView
                    android:id="@+id/suhu_solusi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Solusi : "
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/layout_tindakan_ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_tindakan_suhu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
        >
            <TextView
                    android:id="@+id/ph_conclusion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Suhu terlalu tinggi"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>
            <TextView
                    android:id="@+id/ph_akibat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Akibat : "
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            <TextView
                    android:id="@+id/ph_solusi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Solusi : "
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
